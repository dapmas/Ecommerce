<script>
function display()
{
if (document.getElementById("username").value && document.getElementById("pwd").value)
	{
	if (document.getElementById("customer1").checked)
		{
		//check if user name and password match from customer database else print appropriate message. Also, pass forward the customer ID
		window.location.replace("/website/customer_home");
		}
	else if (document.getElementById("merchant1").checked)
		{
		//check if user name and password match from merchant database else print appropriate message. Also, pass forward the merchant ID
		window.location.replace("/website/merchant_home");
		}
	else
		{
		alert("Please select the User Type");
		}
	}
else
	{
	alert("Please enter user name and password");
	}
}
</script>

